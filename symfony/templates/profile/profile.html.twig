{% extends 'base.html.twig' %}

{% block title %}{{ app.user.firstname }}- Profil{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('styles/view.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    <div id="middle">
        <div class="child1">
            <h1>Profil de <span>{{ profile.firstName }}</span></h1>
        </div>

        <div class="child2">
            <div class="picture">
                <img src="{{ asset(handle_profile_picture(profile)) }}" alt="profile_picture">
            </div>

            <div class="info">
                <p>{{ profile.firstName }}</p>
                <p>{{ profile.lastName }}</p>
                <p>{{ profile.roles[0] }}</p>
            </div>

            <div><button class="edit">Modifier</button></div>


        </div>
        <div class="child3">

        </div>
    </div>



{% endblock %}

